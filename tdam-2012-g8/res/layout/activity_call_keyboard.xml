<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal" >

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_gradient_gris_oscuro"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/shape_gradient_cian"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_dial_pad" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teclado"
                    android:textColor="@color/gris_claro"
                    android:textStyle="bold" />

            </LinearLayout>
            
        </TabWidget>

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_gradient_gris_oscuro"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_registry" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registro"
                    android:textColor="@color/gris_claro"
                    android:textStyle="bold" />

            </LinearLayout>
        </TabWidget>

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/shape_gradient_gris_oscuro" >
  
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_contacts" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contactos"
                    android:textColor="@color/gris_claro"
                    android:textStyle="bold" />

            </LinearLayout>
        </TabWidget>

    </LinearLayout>
    
      <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content" >

		<TextView
		    android:id="@+id/textView4"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:padding="15dp"
		    android:text="3512345678"
		    android:textAppearance="?android:attr/textAppearanceLarge"
		    android:textColor="@color/gris2_oscuro"
		    android:textSize="40dp" />
	  
	</LinearLayout>





    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:layout_weight="1">


            <Button
                android:id="@+id/button1"
                style="@style/keyboard_button"
                android:layout_weight="1"
                android:text="1"
                android:textColor="@color/naranja_oscuro" />

            <Button
                android:id="@+id/button2"
                style="@style/keyboard_button"
                android:layout_weight="1"
                android:text="4"
                android:textColor="@color/naranja_oscuro" />


            <Button
                android:id="@+id/button3"
                style="@style/keyboard_button"
                android:layout_weight="1"
                android:text="7"
                android:textColor="@color/naranja_oscuro" />

            <Button
                android:id="@+id/button4"
                style="@style/keyboard_button"
                android:layout_weight="1"
                android:text="*"
                android:textColor="@color/gris2_oscuro" />
           
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:layout_weight="1">


            <Button
                android:id="@+id/button5"
                style="@style/keyboard_button"
                android:layout_weight="1"
                android:text="2"
                android:textColor="@color/verde_oscuro" />

            <Button
                android:id="@+id/button6"
                style="@style/keyboard_button"
                android:layout_weight="1"
                android:text="5"
                android:textColor="@color/verde_oscuro" />


            <Button
                android:id="@+id/button7"
                style="@style/keyboard_button"
                android:layout_weight="1"
                android:text="8"
                android:textColor="@color/verde_oscuro" />


            <Button
                android:id="@+id/button8"
                style="@style/keyboard_button"
                android:layout_weight="1"
                android:text="0"
                android:textColor="@color/verde_oscuro" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1" >


            <Button
                android:id="@+id/button9"
                style="@style/keyboard_button"
                android:layout_weight="1"
                android:text="3"
                android:textColor="@color/rosa_oscuro" />


            <Button
                android:id="@+id/button10"
                style="@style/keyboard_button"
                android:layout_weight="1"
                android:text="6"
                android:textColor="@color/rosa_oscuro" />


            <Button
                android:id="@+id/button11"
                style="@style/keyboard_button"
                android:layout_weight="1"
                android:text="9"
                android:textColor="@color/rosa_oscuro" />

            <Button
                android:id="@+id/button12"
                style="@style/keyboard_button"
                android:layout_weight="1"
                android:text="#"
                android:textColor="@color/gris2_oscuro" />

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal" >


        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_gradient_gris_oscuro"
            android:src="@drawable/icon_call" />


        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_gradient_gris_oscuro"
            android:src="@drawable/icon_back" />

    </LinearLayout>

</LinearLayout>