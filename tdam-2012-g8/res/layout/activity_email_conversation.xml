<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gradient_gris_oscuro"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/sms_list_contact_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_launcher" />
			
        <TextView
            android:id="@+id/email_list_contact_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/rosa_claro" />

    </LinearLayout>



    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_gradient_gris"
        android:dividerHeight="0dp"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll" >

    </ListView>

    <LinearLayout
        android:id="@+id/general_pnl_send_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gradient_gris_oscuro"
        android:orientation="horizontal"
        android:padding="5dp" >

        <EditText
            android:id="@+id/email_list_contact_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/sms_list_contact_message"
            android:inputType="text" />

        <Button
            android:id="@+id/email_list_contact_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_send" />
    </LinearLayout>

</LinearLayout>