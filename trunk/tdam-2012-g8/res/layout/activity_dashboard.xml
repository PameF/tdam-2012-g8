<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_gradient_gris"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/shape_gradient_gris_oscuro"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingTop="20dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:src="@drawable/dashboard_1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/dashboard_btn_llamadas"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_gradient_dashboard"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dashboard_2" />

        <ImageButton
            android:id="@+id/dashboard_btn_sms"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_gradient_dashboard"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dashboard_3" />

        <ImageButton
            android:id="@+id/dashboard_btn_email"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_gradient_dashboard"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dashboard_4" />

        <ImageButton
            android:id="@+id/dashboard_btn_sms_web"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_gradient_dashboard"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dashboard_5" />

    </LinearLayout>

</LinearLayout>