<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/contact_list_new"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gradient_cian"
        android:padding="15dp"
        android:text="@string/title_new_contact"
        android:textColor="@color/blanco"
        android:textSize="@dimen/padding_large"
        android:textStyle="bold" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gris2_oscuro"
        android:padding="5dp" >

        <EditText
            android:id="@+id/contact_list_search_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="5dp" />

        <ImageButton
            android:id="@+id/contact_list_search"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/shape_gradient_cian"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:src="@drawable/ic_action_search" />

    </LinearLayout>

</LinearLayout>